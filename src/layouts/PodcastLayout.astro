---
interface Props {
  title?: string;
}

const { title = 'PODCAST' } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | PODCAST</title>
  </head>
  <body>
    <!-- Header/Navigation -->
    <header class="header">
      <div class="header-container">
        <a href="/astro-platform-starter/" class="logo">PODCAST</a>
        <nav class="nav">
          <a href="/astro-platform-starter/">HOME</a>
          <a href="/astro-platform-starter/opinione-non-richiesta">OPINIONE NON RICHIESTA</a>
          <a href="/astro-platform-starter/a-normal">A-NORMAL</a>
          <a href="/astro-platform-starter/chiacchiere">CHIACCHIERE</a>
          <a href="/astro-platform-starter/chi-sono">CHI SONO</a>
        </nav>
      </div>
    </header>
    <!-- Main Content -->
    <main>
      <slot />
    </main>
    <!-- Footer -->
    <footer class="footer">
      <div class="footer-container">
        <div class="footer-content">
          <div class="footer-section">
            <h4>PODCAST</h4>
            <p>Storie, opinioni e conversazioni che contano.</p>
          </div>
          
          <div class="footer-section">
            <h5>SEZIONI</h5>
            <ul>
              <li><a href="/astro-platform-starter/opinione-non-richiesta">Opinione Non Richiesta</a></li>
              <li><a href="/astro-platform-starter/a-normal">A-Normal</a></li>
              <li><a href="/astro-platform-starter/chiacchiere">Chiacchiere</a></li>
              <li><a href="/astro-platform-starter/chi-sono">Chi Sono</a></li>
            </ul>
          </div>
          
          <div class="footer-section">
            <h5>ADMIN</h5>
            <ul>
              <li><a href="#">Accedi al pannello</a></li>
            </ul>
          </div>
        </div>
        
        <div class="footer-divider"></div>
        <div class="footer-bottom">
          <p>© 2026 — Tutti i diritti riservati</p>
        </div>
      </div>
    </footer>
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html, body {
    width: 100%;
    background: white;
  }
  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #000;
    line-height: 1.6;
  }
  a {
    color: inherit;
    text-decoration: none;
  }
  a:hover {
    opacity: 0.7;
  }
  /* Header Styles */
  .header {
    border-bottom: 2px solid black;
    padding: 20px 0;
    background: white;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    font-size: 24px;
    font-weight: 700;
    letter-spacing: 1px;
  }
  .nav {
    display: flex;
    gap: 30px;
    font-size: 12px;
    letter-spacing: 1px;
  }
  .nav a {
    font-weight: 500;
    transition: opacity 0.3s;
  }
  /* Main Content */
  main {
    min-height: calc(100vh - 300px);
  }
  /* Footer Styles */
  .footer {
    border-top: 2px solid black;
    padding: 40px 0;
    background: white;
    margin-top: 40px;
  }
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .footer-content {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    margin-bottom: 30px;
  }
  .footer-section {
    font-size: 14px;
  }
  .footer-section h4,
  .footer-section h5 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 10px;
    letter-spacing: 0.5px;
  }
  .footer-section p {
    font-size: 13px;
    color: #666;
  }
  .footer-section ul {
    list-style: none;
  }
  .footer-section ul li {
    margin-bottom: 5px;
  }
  .footer-section a {
    font-size: 13px;
    color: #000;
  }
  .footer-divider {
    height: 2px;
    background: black;
    margin-bottom: 20px;
  }
  .footer-bottom {
    text-align: center;
    font-size: 12px;
    color: #666;
  }
  /* Responsive */
  @media (max-width: 768px) {
    .nav {
      gap: 15px;
      font-size: 10px;
    }
    .footer-content {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
</style>
