---
import Layout from '../layouts/Layout.astro';import { getCollection } from 'astro:content';

// Get all articles from the a_normal_opinion collection
const allArticles = await getCollection('a_normal_opinion');
const sortedArticles = allArticles.sort(
  (a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
---

<Layout title="A-Normal Opinion">
  <div class="articles-container">
    <div class="articles-header">
      <h1>A-Normal Opinion</h1>
      <p>Analisi, opinioni e storie affascinanti fuori dall'ordinario.</p>
    </div>

    <div class="articles-grid">
      {sortedArticles.length > 0 ? (
        sortedArticles.map((article) => (
          <article class="article-card">
            {article.data.heroImage && (
              <img src={article.data.heroImage} alt={article.data.title} class="article-image" />
            )}

            <div class="article-content">
              <h2>{article.data.title}</h2>
              <p class="article-meta">
                <span class="author">di {article.data.author}</span>
                <span class="date">{new Date(article.data.pubDate).toLocaleDateString('it-IT')}</span>
              </p>

              <p class="article-description">{article.data.description}</p>

              {(article.data.audio_url || article.data.youtube_url) && (
                <div class="media-links">
                  {article.data.audio_url && (
                    <a href={article.data.audio_url} target="_blank" rel="noopener noreferrer" class="media-link audio-link">üéôÔ∏è Ascolta</a>
                  )}
                  {article.data.youtube_url && (
                    <a href={article.data.youtube_url} target="_blank" rel="noopener noreferrer" class="media-link youtube-link">‚ñ∂Ô∏è Guarda</a>
                  )}
                </div>
              )}
            </div>
          </article>
        ))
      ) : (
        <div class="no-articles">
          <p>Nessun articolo disponibile al momento.</p>
        </div>
      )}
    </div>
  </div>
</Layout>

<style>
  .articles-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px;
  }

  .articles-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .articles-header h1 {
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 16px;
    color: #1a1a1a;
    font-family: 'Georgia', serif;
  }

  .articles-header p {
    font-size: 18px;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 32px;
  }

  .article-card {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .article-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .article-content {
    padding: 24px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .article-card h2 {
    font-size: 22px;
    font-weight: 600;
    margin-bottom: 12px;
    color: #1a1a1a;
    line-height: 1.4;
  }

  .article-meta {
    display: flex;
    gap: 16px;
    font-size: 14px;
    color: #999;
    margin-bottom: 12px;
  }

  .article-description {
    font-size: 15px;
    color: #555;
    line-height: 1.6;
    margin-bottom: 16px;
    flex-grow: 1;
  }

  .media-links {
    display: flex;
    gap: 12px;
    margin-top: auto;
  }

  .media-link {
    display: inline-block;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    text-align: center;
    flex: 1;
  }

  .audio-link {
    background: #f0f0f0;
    color: #1a1a1a;
  }

  .audio-link:hover {
    background: #e0e0e0;
  }

  .youtube-link {
    background: #1a1a1a;
    color: #fff;
  }

  .youtube-link:hover {
    background: #333;
  }

  .no-articles {
    grid-column: 1 / -1;
    text-align: center;
    padding: 60px 20px;
    color: #999;
    font-size: 18px;
  }

  @media (max-width: 768px) {
    .articles-header h1 {
      font-size: 36px;
    }

    .articles-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .article-meta {
      flex-direction: column;
      gap: 4px;
    }
  }
</style>
