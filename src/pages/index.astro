---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="py-20 px-8 lg:px-16">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div>
            <p class="text-sm tracking-widest text-gray-600 mb-6">PODCAST & STORIE</p>
            <h1 class="text-6xl lg:text-7xl font-serif mb-6 leading-tight">Test Hero Title</h1>
            <p class="text-lg text-gray-700 mb-8 leading-relaxed">Storie, opinioni e conversazioni che meritano il tuo tempo.</p>
            
            <div class="flex gap-4">
              <a href="/opinione-non-richiesta" class="bg-black text-white px-8 py-3 font-semibold hover:bg-gray-800 transition">ESPLORA →</a>
              <a href="/chi-sono" class="border-2 border-black text-black px-8 py-3 font-semibold hover:bg-black hover:text-white transition">CHI SONO</a>
            </div>
          </div>
          
          <!-- Right Image -->
          <div class="flex justify-center">
            <div class="w-full aspect-square bg-gray-300 border-4 border-black"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="border-b-2 border-black"></div>

    <!-- Sections Grid -->
    <section class="py-20 px-8 lg:px-16">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-4xl font-serif mb-12">Le Sezioni</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Section 1 -->
          <a href="/opinione-non-richiesta" class="group cursor-pointer">
            <div class="mb-4">
              <h3 class="text-2xl font-serif mb-2">Opinione Non Richiesta</h3>
              <p class="text-gray-700">Pensieri liberi e non filtrati</p>
            </div>
            <p class="text-black font-semibold group-hover:underline">SCOPRI →</p>
          </a>
          
          <!-- Section 2 -->
          <a href="/a-normal" class="group cursor-pointer">
            <div class="mb-4">
              <h3 class="text-2xl font-serif mb-2">A-Normal</h3>
              <p class="text-gray-700">Storie fuori dall'ordinario</p>
            </div>
            <p class="text-black font-semibold group-hover:underline">SCOPRI →</p>
          </a>
          
          <!-- Section 3 -->
          <a href="/chiacchiere" class="group cursor-pointer">
            <div class="mb-4">
              <h3 class="text-2xl font-serif mb-2">Chiacchiere</h3>
              <p class="text-gray-700">Conversazioni senza filtri</p>
            </div>
            <p class="text-black font-semibold group-hover:underline">SCOPRI →</p>
          </a>
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="border-b-2 border-black"></div>

    <!-- Coming Soon Section -->
    <section class="py-20 px-8 lg:px-16 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-serif mb-4">Contenuti in arrivo</h2>
        <p class="text-lg text-gray-700">I contenuti saranno presto disponibili. Torna a trovarci!</p>
      </div>
    </section>
  </div>
</Layout>
