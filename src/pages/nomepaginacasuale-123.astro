---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Admin - Gestione Articoli | Signore del Circo">
  <div class="admin-container">
    <div class="admin-header">
      <h1>Admin Dashboard</h1>
      <button id="logoutBtn" class="logout-btn">Esci</button>
    </div>
    
    <div class="admin-tabs">
      <button class="tab-btn active" data-tab="articoli">Articoli</button>
      <button class="tab-btn" data-tab="account">Account</button>
    </div>

    <div id="articoli" class="tab-content active">
      <h2>Nuovo Articolo</h2>
      <form id="articleForm">
        <div class="form-group">
          <label for="section">Sezione</label>
          <select id="section" required>
            <option value="Opinione Non Richiesta">Opinione Non Richiesta</option>
            <option value="A-Normal">A-Normal</option>
            <option value="Chiacchiere">Chiacchiere</option>
          </select>
        </div>

        <div class="form-group">
          <label for="title">Titolo</label>
          <input type="text" id="title" required>
        </div>

        <div class="form-group">
          <label for="description">Descrizione</label>
          <textarea id="description" required></textarea>
        </div>

        <div class="form-group">
          <label for="duration">Durata (es: 45 minuti)</label>
          <input type="text" id="duration">
        </div>

        <div class="form-group">
          <label for="spreaker">Link Spreaker</label>
          <input type="url" id="spreaker">
        </div>

        <div class="form-group">
          <label for="spotify">Link Spotify</label>
          <input type="url" id="spotify">
        </div>

        <div class="form-group">
          <label for="applePodcasts">Link Apple Podcasts</label>
          <input type="url" id="applePodcasts">
        </div>

        <div class="form-actions">
          <button type="submit" class="btn-primary">Pubblica Articolo</button>
          <button type="reset" class="btn-secondary">Cancella</button>
        </div>
      </form>

      <div class="recent-articles">
        <h3>Articoli Recenti</h3>
        <div id="recentArticles" class="articles-list"></div>
      </div>
    </div>

    <div id="account" class="tab-content">
      <h2>Account</h2>
      <p>Account management section</p>
    </div>
  </div>
</Layout>

<style>
  .admin-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 15px;
  }

  .logout-btn {
    background-color: #ff5252;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
  }

  .admin-tabs {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
    border-bottom: 2px solid #f0f0f0;
  }

  .tab-btn {
    background: none;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    color: #999;
    font-size: 14px;
    border-bottom: 3px solid transparent;
    transition: all 0.3s ease;
  }

  .tab-btn.active {
    color: #3b82f6;
    border-bottom-color: #3b82f6;
  }

  .tab-content {
    display: none;
    animation: fadeIn 0.3s ease-in-out;
  }

  .tab-content.active {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    font-size: 14px;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    font-family: inherit;
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-actions {
    display: flex;
    gap: 10px;
    margin-top: 30px;
  }

  .btn-primary {
    background-color: #3b82f6;
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    transition: background-color 0.2s;
  }

  .btn-primary:hover {
    background-color: #2563eb;
  }

  .btn-secondary {
    background-color: #e5e7eb;
    color: #1f2937;
    border: none;
    padding: 12px 24px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.2s;
  }

  .btn-secondary:hover {
    background-color: #d1d5db;
  }

  .recent-articles {
    margin-top: 50px;
  }

  .articles-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .article-item {
    padding: 15px;
    border: 1px solid #e5e7eb;
    border-radius: 4px;
    background-color: #f9fafb;
  }

  .article-item h4 {
    margin: 0 0 5px 0;
    font-size: 16px;
  }

  .article-item p {
    margin: 0;
    color: #666;
    font-size: 14px;
  }
</style>

<script is:inline>
  // Tab switching with smooth transitions
  document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const tabName = btn.getAttribute('data-tab');
      
      // Remove active class from all tabs and contents
      document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
      
      // Add active class to clicked tab and corresponding content
      btn.classList.add('active');
      document.getElementById(tabName).classList.add('active');
    });
  });

  // Article form submission with localStorage
  const articleForm = document.getElementById('articleForm');
  
  articleForm.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const article = {
      id: Date.now(),
      section: document.getElementById('section').value,
      title: document.getElementById('title').value,
      description: document.getElementById('description').value,
      duration: document.getElementById('duration').value || '',
      spreaker: document.getElementById('spreaker').value || '',
      spotify: document.getElementById('spotify').value || '',
      applePodcasts: document.getElementById('applePodcasts').value || '',
      createdAt: new Date().toISOString()
    };
    
    // Get existing articles from localStorage
    let articles = JSON.parse(localStorage.getItem('podcast_articles') || '[]');
    articles.push(article);
    
    // Save to localStorage
    localStorage.setItem('podcast_articles', JSON.stringify(articles));
    
    // Reset form
    articleForm.reset();
    
    // Update recent articles display
    displayRecentArticles();
  });

  // Display recent articles
  function displayRecentArticles() {
    const articles = JSON.parse(localStorage.getItem('podcast_articles') || '[]');
    const container = document.getElementById('recentArticles');
    
    if (articles.length === 0) {
      container.innerHTML = '<p style="color: #999;">Nessun articolo trovato. Crea il tuo primo articolo!</p>';
      return;
    }
    
    // Show most recent articles first
    const sortedArticles = articles.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
    
    container.innerHTML = sortedArticles.map(article => `
      <div class="article-item">
        <h4>${article.title}</h4>
        <p><strong>Sezione:</strong> ${article.section}</p>
        <p><strong>Durata:</strong> ${article.duration || 'N/A'}</p>
        <p>${article.description.substring(0, 100)}...</p>
      </div>
    `).join('');
  }

  // Load recent articles on page load
  displayRecentArticles();

  // Logout button
  document.getElementById('logoutBtn').addEventListener('click', () => {
    localStorage.removeItem('admin_session');
    window.location.href = '/';
  });
</script>
