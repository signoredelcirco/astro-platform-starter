---
import Layout from '../layouts/Layout.astro';
import { saveArticle, getArticlesBySection } from '../utils/articles';
---

<Layout title="Admin - Gestione Articoli | Signore del Circo">
  <div class="admin-container">
    <div class="admin-header">
      <h1>Admin Dashboard</h1>
      <button id="logoutBtn" class="logout-btn">Esci</button>
    </div>

    <div class="admin-tabs">
      <button class="tab-btn active" data-tab="articoli">Articoli</button>
      <button class="tab-btn" data-tab="home">Home</button>
      <button class="tab-btn" data-tab="chisono">Chi Sono</button>
      <button class="tab-btn" data-tab="account">Account</button>
    </div>

    <!-- TAB ARTICOLI -->
    <div id="articoli" class="tab-content active">
      <h2>Nuovo Articolo</h2>
      <form id="articleForm">
        <div class="form-group">
          <label for="section">Sezione</label>
          <select id="section" required>
            <option value="Opinione Non Richiesta">Opinione Non Richiesta</option>
            <option value="A-Normal">A-Normal</option>
            <option value="Chiacchiere">Chiacchiere</option>
          </select>
        </div>

        <div class="form-group">
          <label for="title">Titolo</label>
          <input type="text" id="title" required>
        </div>

        <div class="form-group">
          <label for="description">Descrizione</label>
          <textarea id="description" required></textarea>
        </div>

        <div class="form-group">
          <label for="duration">Durata (es: 45 minuti)</label>
          <input type="text" id="duration">
        </div>

        <div class="form-group">
          <label for="spreaker">Link Spreaker</label>
          <input type="url" id="spreaker">
        </div>

        <div class="form-group">
          <label for="spotify">Link Spotify</label>
          <input type="url" id="spotify">
        </div>

        <div class="form-group">
          <label for="applePodcasts">Link Apple Podcasts</label>
          <input type="url" id="applePodcasts">
        </div>

        <div class="form-actions">
          <button type="submit" class="btn-primary">Pubblica Articolo su Supabase</button>
          <button type="reset" class="btn-secondary">Cancella</button>
        </div>
      </form>

      <div class="recent-articles">
        <h3>Articoli Recenti</h3>
        <div id="recentArticles" class="articles-list">
          <p style="color: #999;">Nessun articolo trovato. Crea il tuo primo articolo!</p>
        </div>
      </div>
    </div>

    <!-- TAB HOME -->
    <div id="home" class="tab-content">
      <h2>Gestisci Home Page</h2>
      <form id="homeForm">
        <div class="form-group">
          <label for="homeTitle">Titolo Principale</label>
          <input type="text" id="homeTitle" placeholder="Es: Benvenuto nel mio sito">
        </div>
        <div class="form-group">
          <label for="homeSubtitle">Sottotitolo</label>
          <input type="text" id="homeSubtitle" placeholder="Es: Podcast e articoli interessanti">
        </div>
        <div class="form-group">
          <label for="homeDescription">Descrizione</label>
          <textarea id="homeDescription" placeholder="Descrizione della home page"></textarea>
        </div>
        <div class="form-actions">
          <button type="button" class="btn-primary" id="saveHomeBtn">Salva Modifiche</button>
          <button type="reset" class="btn-secondary">Annulla</button>
        </div>
      </form>
    </div>

    <!-- TAB CHI SONO -->
    <div id="chisono" class="tab-content">
      <h2>Gestisci Chi Sono</h2>
      <form id="chisonoForm">
        <div class="form-group">
          <label for="chisonoTitle">Titolo</label>
          <input type="text" id="chisonoTitle" placeholder="Chi sono?">
        </div>
        <div class="form-group">
          <label for="chisonoContent">Contenuto</label>
          <textarea id="chisonoContent" placeholder="Scrivi una breve biografia..." style="min-height: 300px;"></textarea>
        </div>
        <div class="form-group">
          <label for="chisonoImage">URL Immagine Profilo</label>
          <input type="url" id="chisonoImage" placeholder="https://...">
        </div>
        <div class="form-actions">
          <button type="button" class="btn-primary" id="saveChisonoBtn">Salva Modifiche</button>
          <button type="reset" class="btn-secondary">Annulla</button>
        </div>
      </form>
    </div>

    <!-- TAB ACCOUNT -->
    <div id="account" class="tab-content">
      <h2>Gestione Account</h2>
      <div class="sessions-container">
        <h3>Sessioni Attive</h3>
        <table class="sessions-table">
          <thead>
            <tr>
              <th>Data/Ora Login</th>
              <th>Device/Browser</th>
              <th>Azioni</th>
            </tr>
          </thead>
          <tbody id="sessionsList">
            <tr>
              <td colspan="3" style="text-align: center; color: #999;">Nessuna sessione registrata</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</Layout>

<style>
  .admin-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 15px;
  }

  .logout-btn {
    background-color: #ff5252;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
  }

  .admin-tabs {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
    border-bottom: 2px solid #f0f0f0;
    flex-wrap: wrap;
  }

  .tab-btn {
    background: none;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    color: #999;
    font-size: 14px;
    border-bottom: 3px solid transparent;
    transition: all 0.3s ease;
  }

  .tab-btn.active {
    color: #3b82f6;
    border-bottom-color: #3b82f6;
  }

  .tab-content {
    display: none;
    animation: fadeIn 0.3s ease-in-out;
  }

  .tab-content.active {
    display: block;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    font-size: 14px;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    font-family: inherit;
    box-sizing: border-box;
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-actions {
    display: flex;
    gap: 10px;
    margin-top: 30px;
    flex-wrap: wrap;
  }

  .btn-primary {
    background-color: #3b82f6;
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    transition: background-color 0.2s;
  }

  .btn-primary:hover {
    background-color: #2563eb;
  }

  .btn-secondary {
    background-color: #e5e7eb;
    color: #1f2937;
    border: none;
    padding: 12px 24px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.2s;
  }

  .btn-secondary:hover {
    background-color: #d1d5db;
  }

  .recent-articles {
    margin-top: 50px;
  }

  .articles-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .article-item {
    padding: 15px;
    border: 1px solid #e5e7eb;
    border-radius: 4px;
    background-color: #f9fafb;
  }

  .article-item h4 {
    margin: 0 0 5px 0;
    font-size: 16px;
  }

  .article-item p {
    margin: 0;
    color: #666;
    font-size: 14px;
  }

  .sessions-container {
    margin-top: 20px;
  }

  .sessions-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .sessions-table th,
  .sessions-table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #e5e7eb;
  }

  .sessions-table th {
    background-color: #f9fafb;
    font-weight: 600;
  }
</style>

<script is:inline>
  // Tab switching
  document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const tabName = btn.getAttribute('data-tab');
      document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
      btn.classList.add('active');
      document.getElementById(tabName).classList.add('active');
    });
  });

  // Article form submission with localStorage (test)
  const articleForm = document.getElementById('articleForm');
  articleForm.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const article = {
      id: Date.now(),
      title: document.getElementById('title').value,
      content: document.getElementById('description').value,
      section: document.getElementById('section').value,
      createdAt: new Date().toISOString()
    };

    try {
      let articles = JSON.parse(localStorage.getItem('podcast_articles') || '[]');
      articles.push(article);
      localStorage.setItem('podcast_articles', JSON.stringify(articles));
      alert('✅ Articolo salvato!');
      articleForm.reset();
      displayRecentArticles();
    } catch (error) {
      alert('❌ Errore: ' + error.message);
      console.error('Errore:', error);
    }
  });

  // Display recent articles
  function displayRecentArticles() {
    try {
      const articles = JSON.parse(localStorage.getItem('podcast_articles') || '[]');
      const container = document.getElementById('recentArticles');
      
      if (articles.length > 0) {
        container.innerHTML = articles.map(article => `
          <div class="article-item">
            <h4>${article.title}</h4>
            <p><strong>Sezione:</strong> ${article.section}</p>
            <p>${article.content.substring(0, 100)}...</p>
            <p style="color: #999; font-size: 12px;">Creato: ${new Date(article.createdAt).toLocaleString('it-IT')}</p>
          </div>
        `).join('');
      } else {
        container.innerHTML = '<p style="color: #999;">Nessun articolo trovato. Crea il tuo primo articolo!</p>';
      }
    } catch (error) {
      console.error('Errore nel caricamento articoli:', error);
    }
  }

  displayRecentArticles();

  // Home page management
  document.getElementById('saveHomeBtn')?.addEventListener('click', () => {
    const homeData = {
      title: document.getElementById('homeTitle').value,
      subtitle: document.getElementById('homeSubtitle').value,
      description: document.getElementById('homeDescription').value
    };
    localStorage.setItem('home_data', JSON.stringify(homeData));
    alert('✅ Home page salvata!');
  });

  // Chi Sono management
  document.getElementById('saveChisonoBtn')?.addEventListener('click', () => {
    const chisonoData = {
      title: document.getElementById('chisonoTitle').value,
      content: document.getElementById('chisonoContent').value,
      image: document.getElementById('chisonoImage').value
    };
    localStorage.setItem('chisono_data', JSON.stringify(chisonoData));
    alert('✅ Pagina Chi Sono salvata!');
  });

  // Load existing data
  function loadSavedData() {
    const homeData = localStorage.getItem('home_data');
    if (homeData) {
      const data = JSON.parse(homeData);
      document.getElementById('homeTitle').value = data.title || '';
      document.getElementById('homeSubtitle').value = data.subtitle || '';
      document.getElementById('homeDescription').value = data.description || '';
    }

    const chisonoData = localStorage.getItem('chisono_data');
    if (chisonoData) {
      const data = JSON.parse(chisonoData);
      document.getElementById('chisonoTitle').value = data.title || '';
      document.getElementById('chisonoContent').value = data.content || '';
      document.getElementById('chisonoImage').value = data.image || '';
    }
  }
  loadSavedData();

  // Session management
  function initializeSession() {
    let sessions = JSON.parse(sessionStorage.getItem('admin_sessions') || '[]');
    const currentSession = {
      id: crypto.randomUUID(),
      loginTime: new Date().toLocaleString('it-IT'),
      device: navigator.userAgent.substring(0, 50)
    };
    sessions.push(currentSession);
    sessionStorage.setItem('admin_sessions', JSON.stringify(sessions));
    displaySessions();
  }

  function displaySessions() {
    const sessions = JSON.parse(sessionStorage.getItem('admin_sessions') || '[]');
    const tbody = document.getElementById('sessionsList');
    
    if (sessions.length === 0) {
      tbody.innerHTML = '<tr><td colspan="3" style="text-align: center; color: #999;">Nessuna sessione registrata</td></tr>';
      return;
    }

    tbody.innerHTML = sessions.map((session, index) => `
      <tr>
        <td>${session.loginTime}</td>
        <td>${session.device}</td>
        <td><button onclick="removeSession(${index})" style="cursor: pointer; background: #ff5252; color: white; border: none; padding: 5px 10px; border-radius: 3px;">Logout</button></td>
      </tr>
    `).join('');
  }

  window.removeSession = function(index) {
    let sessions = JSON.parse(sessionStorage.getItem('admin_sessions') || '[]');
    sessions.splice(index, 1);
    sessionStorage.setItem('admin_sessions', JSON.stringify(sessions));
    displaySessions();
  }

  initializeSession();

  // Logout button
  document.getElementById('logoutBtn').addEventListener('click', () => {
    localStorage.removeItem('admin_session');
    sessionStorage.clear();
    window.location.href = '/';
  });
</script>
