---
import PodcastLayout from '../../layouts/PodcastLayout.astro';
---

<PodcastLayout>
  <div class="section-container">
    <h1>Chiacchiere</h1>
    <p>Conversazioni senza filtri e discussioni interessanti.</p>
    
    <div class="articles">
      <article>
        <h2>Articolo di Prova</h2>
        <p>Una sezione per conversazioni informali su vari argomenti.</p>
      </article>
    </div>
  </div>
</PodcastLayout>

<style>
  .section-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }
  
  h1 {
    font-size: 36px;
    margin-bottom: 20px;
    font-family: Georgia, serif;
  }
  
  .articles {
    margin-top: 40px;
  }
  
  article {
    padding: 20px;
    margin-bottom: 20px;
    background: #f9f9f9;
    border-radius: 4px;
  }
  
  article h2 {
    font-size: 24px;
    margin-bottom: 10px;
  }
</style>
