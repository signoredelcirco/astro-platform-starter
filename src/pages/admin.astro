<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin - Gestione Articoli | Signore del Circo</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .container {
      background: white;
      border-radius: 12px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
      max-width: 500px;
      width: 100%;
    }

    .login-section, .dashboard {
      padding: 3rem 2rem;
      text-align: center;
    }

    .login-section h1 {
      margin-bottom: 1rem;
      color: #333;
      font-size: 28px;
    }

    .login-section p {
      color: #666;
      margin-bottom: 2rem;
      font-size: 14px;
    }

    .form-group {
      margin-bottom: 1.5rem;
      text-align: left;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      color: #333;
      font-weight: 500;
      font-size: 14px;
    }

    .form-group input {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 14px;
      font-family: inherit;
    }

    .form-group input:focus {
      outline: none;
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .btn {
      width: 100%;
      padding: 0.75rem;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

    .btn-secondary {
      background: #f0f0f0;
      color: #333;
      margin-top: 1rem;
    }

    .btn-secondary:hover {
      background: #e0e0e0;
    }

    .error-message {
      display: none;
      background: #ffebee;
      color: #c62828;
      padding: 1rem;
      border-radius: 4px;
      margin-bottom: 1rem;
      font-size: 14px;
    }

    .error-message.visible {
      display: block;
    }

    .dashboard {
      display: none;
    }

    .dashboard.visible {
      display: block;
    }

    .dashboard h2 {
      margin-bottom: 1.5rem;
      color: #333;
    }

    .user-info {
      background: #f5f5f5;
      padding: 1.5rem;
      border-radius: 8px;
      margin-bottom: 2rem;
      text-align: left;
    }

    .user-info h3 {
      margin-bottom: 1rem;
      color: #333;
    }

    .user-info p {
      color: #666;
      font-size: 14px;
      margin-bottom: 0.5rem;
    }

    .nav-links {
      display: flex;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .nav-links a {
      flex: 1;
      padding: 0.75rem;
      background: #667eea;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      font-size: 14px;
      text-align: center;
      transition: background 0.3s;
    }

    .nav-links a:hover {
      background: #764ba2;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Login Section -->
    <div class="login-section" id="loginSection">
      <h1>üîê Pannello Admin</h1>
      <p>Accedi per gestire gli articoli dei podcast</p>

      <div class="error-message" id="loginError"></div>

      <form id="loginForm">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required />
        </div>
        <button type="submit" class="btn btn-primary">Accedi</button>
      </form>
    </div>

    <!-- Dashboard Section -->
    <div class="dashboard" id="dashboard">
      <h2>üìù Dashboard Admin</h2>

      <div class="user-info">
        <h3>Informazioni Account</h3>
        <p><strong>Email:</strong> <span id="userEmail">-</span></p>
        <p id="lastLoginInfo"></p>
      </div>

      <div class="nav-links">
        <a href="/astro-platform-starter/">‚Üê Torna Home</a>
        <button class="btn btn-secondary" onclick="handleLogout()" style="flex: 1; padding: 0.75rem; border: none; cursor: pointer;">Esci</button>
      </div>

      <div style="background: #f5f5f5; padding: 1.5rem; border-radius: 8px; text-align: left;">
        <h3 style="margin-bottom: 1rem; color: #333;">üìã Prossime Funzionalit√†</h3>
        <ul style="color: #666; font-size: 14px; line-height: 1.8;">
          <li>‚úì Gestione articoli per sezione</li>
          <li>‚úì Creazione/Modifica/Eliminazione episodi</li>
          <li>‚úì Integrazione GitHub API</li>
          <li>‚úì Preview in tempo reale</li>
        </ul>
      </div>
    </div>
  </div>

  <script>
    // Credenziali hardcoded (da cambiare in produzione)
    const ADMIN_EMAIL = 'admin@example.com';
    const ADMIN_PASSWORD_HASH = 'admin123'; // In produzione usare bcrypt

    // Initialize on page load
    window.addEventListener('DOMContentLoaded', function() {
      const sessionData = localStorage.getItem('adminSession');
      if (sessionData) {
        try {
          const session = JSON.parse(sessionData);
          // Verifica se la sessione √® ancora valida (24 ore)
          const sessionAge = Date.now() - session.loginTime;
          if (sessionAge < 24 * 60 * 60 * 1000) {
            displayDashboard(session.email);
          } else {
            localStorage.removeItem('adminSession');
          }
        } catch (e) {
          localStorage.removeItem('adminSession');
        }
      }
    });

    // Login form submission
    document.getElementById('loginForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;
      const errorEl = document.getElementById('loginError');

      if (email === ADMIN_EMAIL && password === ADMIN_PASSWORD_HASH) {
        const session = {
          email: email,
          loginTime: Date.now()
        };
        localStorage.setItem('adminSession', JSON.stringify(session));
        displayDashboard(email);
      } else {
        errorEl.textContent = '‚ùå Email o password non validi';
        errorEl.classList.add('visible');
        setTimeout(() => {
          errorEl.classList.remove('visible');
        }, 3000);
      }
    });

    function displayDashboard(email) {
      document.getElementById('loginSection').style.display = 'none';
      document.getElementById('dashboard').classList.add('visible');
      document.getElementById('userEmail').textContent = email;

      const sessionData = JSON.parse(localStorage.getItem('adminSession'));
      const loginDate = new Date(sessionData.loginTime).toLocaleString('it-IT');
      document.getElementById('lastLoginInfo').innerHTML = `<strong>Ultimo accesso:</strong> ${loginDate}`;
    }

    function handleLogout() {
      localStorage.removeItem('adminSession');
      document.getElementById('loginSection').style.display = 'block';
      document.getElementById('dashboard').classList.remove('visible');
      document.getElementById('loginForm').reset();
    }
  </script>
</body>
</html>
