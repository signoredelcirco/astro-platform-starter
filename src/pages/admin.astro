<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Panel | Signore del Circo</title>
  <script src="https://accounts.google.com/gsi/client" async defer></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    
    .container {
      background: white;
      border-radius: 12px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
      padding: 3rem 2rem;
      max-width: 400px;
      width: 100%;
    }
    
    .login-section {
      text-align: center;
    }
    
    .login-section h1 {
      margin-bottom: 2rem;
      color: #333;
      font-size: 28px;
    }
    
    .login-section p {
      color: #666;
      margin-bottom: 2rem;
      font-size: 14px;
    }
    
    #g_id_onload {
      display: flex;
      justify-content: center;
    }
    
    .google-button-wrapper {
      display: flex;
      justify-content: center;
      margin-bottom: 1rem;
    }
    
    .dashboard {
      display: none;
      text-align: center;
    }
    
    .dashboard.visible {
      display: block;
    }
    
    .dashboard h2 {
      color: #333;
      margin-bottom: 1rem;
    }
    
    .user-info {
      background: #f5f5f5;
      padding: 1.5rem;
      border-radius: 8px;
      margin-bottom: 2rem;
      text-align: left;
    }
    
    .user-info h3 {
      color: #333;
      margin-bottom: 1rem;
      font-size: 16px;
    }
    
    .user-detail {
      padding: 0.5rem 0;
      color: #666;
      font-size: 14px;
      border-bottom: 1px solid #e0e0e0;
    }
    
    .user-detail:last-child {
      border-bottom: none;
    }
    
    .user-detail strong {
      color: #333;
    }
    
    .logout-btn {
      background: #f44336;
      color: white;
      border: none;
      padding: 0.75rem 2rem;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
      transition: background 0.3s;
    }
    
    .logout-btn:hover {
      background: #d32f2f;
    }
    
    .error-message {
      display: none;
      background: #ffebee;
      color: #c62828;
      padding: 1rem;
      border-radius: 4px;
      margin-bottom: 1rem;
      font-size: 14px;
    }
    
    .error-message.visible {
      display: block;
    }
    
    .nav-link {
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid #e0e0e0;
    }
    
    .nav-link a {
      color: #667eea;
      text-decoration: none;
      font-size: 14px;
    }
    
    .nav-link a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Login Section -->
    <div class="login-section" id="loginSection">
      <h1>üéπ Pannello Admin</h1>
      <p>Accedi con il tuo account Google per gestire i contenuti</p>
      
      <div class="error-message" id="errorMessage"></div>
      
      <div class="google-button-wrapper">
        <div
          id="g_id_onload"
          data-client_id="YOUR_GOOGLE_CLIENT_ID"
          data-callback="handleCredentialResponse"
        ></div>
        <div class="g_id_signin" data-type="standard"></div>
      </div>
      
      <p style="color: #999; font-size: 12px; margin-top: 2rem;">
        Client ID non configurato? Leggi la documentazione per impostare Google OAuth.
      </p>
    </div>
    
    <!-- Dashboard Section -->
    <div class="dashboard" id="dashboard">
      <h2>üåü Benvenuto!</h2>
      
      <div class="user-info">
        <h3>Informazioni Account</h3>
        <div class="user-detail">
          <strong>Nome:</strong> <span id="userName">-</span>
        </div>
        <div class="user-detail">
          <strong>Email:</strong> <span id="userEmail">-</span>
        </div>
        <div class="user-detail">
          <strong>ID:</strong> <span id="userId">-</span>
        </div>
      </div>
      
      <button class="logout-btn" onclick="handleLogout()">Esci</button>
      
      <div class="nav-link">
        <a href="/">‚Üê Torna alla Home</a>
      </div>
    </div>
  </div>
  
  <script>
    // Initialize Google Sign-In
    window.onload = function() {
      const clientId = document.getElementById('g_id_onload')?.getAttribute('data-client_id');
      
      if (clientId === 'YOUR_GOOGLE_CLIENT_ID') {
        showError('Client ID di Google non configurato. Contatta l\'amministratore.');
        return;
      }
      
      // Check if user is already logged in
      const savedUser = localStorage.getItem('podcastAdminUser');
      if (savedUser) {
        displayDashboard(JSON.parse(savedUser));
      }
    };
    
    function handleCredentialResponse(response) {
      // Decode JWT token (basic implementation)
      const base64Url = response.credential.split('.')[1];
      const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
      const jsonPayload = decodeURIComponent(
        atob(base64)
          .split('')
          .map(function(c) {
            return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
          })
          .join('')
      );
      
      const userData = JSON.parse(jsonPayload);
      
      // Save user data to localStorage
      localStorage.setItem('podcastAdminUser', JSON.stringify(userData));
      
      // Display dashboard
      displayDashboard(userData);
    }
    
    function displayDashboard(userData) {
      document.getElementById('loginSection').style.display = 'none';
      document.getElementById('dashboard').classList.add('visible');
      
      document.getElementById('userName').textContent = userData.name || 'Utente';
      document.getElementById('userEmail').textContent = userData.email || '-';
      document.getElementById('userId').textContent = userData.sub || '-';
    }
    
    function handleLogout() {
      localStorage.removeItem('podcastAdminUser');
      document.getElementById('loginSection').style.display = 'block';
      document.getElementById('dashboard').classList.remove('visible');
      
      // Reload page
      window.location.reload();
    }
    
    function showError(message) {
      const errorEl = document.getElementById('errorMessage');
      errorEl.textContent = message;
      errorEl.classList.add('visible');
    }
  </script>
</body>
</html>
