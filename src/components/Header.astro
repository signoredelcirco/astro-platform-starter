---
import Logo from '../components/Logo.astro';
---

<header class="header">
  <nav class="nav-container">
    <a href="/astro-platform-starter/" class="logo-link">
      <Logo />
    </a>

    <ul class="nav-menu">
      <!-- Home -->
      <li>
        <a href="/astro-platform-starter/" class="nav-link">Home</a>
      </li>

      <!-- Podcasts Dropdown -->
      <li class="nav-item-dropdown">
        <button class="nav-link nav-toggle">I Podcast del Signore del Circo</button>
        <ul class="dropdown-menu">
          <li><a href="/astro-platform-starter/opinione-non-richiesta">Opinione Non Richiesta</a></li>
          <li><a href="/astro-platform-starter/a-normal">A-Normal Podcast</a></li>
          <li><a href="/astro-platform-starter/chiacchiere">Chiacchiere</a></li>
        </ul>
      </li>

      <!-- Chi Sono -->
      <li>
        <a href="/astro-platform-starter/chi-sono" class="nav-link">Chi Sono</a>
      </li>
    </ul>
  </nav>
</header>

<style is:global>
  .header {
    background: white;
    border-bottom: 2px solid black;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80px;
  }

  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 40px;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.5px;
    color: black;
    text-decoration: none;
    background: none;
    border: none;
    padding: 0;
  }

  .nav-link:hover {
    color: #17a2b8;
  }

  .nav-item-dropdown {
    position: relative;
  }

  .nav-toggle {
    cursor: pointer;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    border: 1px solid #ddd;
    list-style: none;
    padding: 10px 0;
    margin: 10px 0 0 0;
    min-width: 200px;
  }

  .nav-item-dropdown:hover .dropdown-menu {
    display: block;
  }

  .dropdown-menu li {
    padding: 0;
  }

  .dropdown-menu a {
    display: block;
    padding: 10px 20px;
    color: black;
    text-decoration: none;
    font-size: 14px;
  }

  .dropdown-menu a:hover {
    background: #f5f5f5;
    color: #17a2b8;
  }
</style>
