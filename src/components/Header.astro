---
import Logo from '../components/Logo.astro';
---

<nav class="flex flex-wrap items-center justify-between gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
  <a href="/">
    <Logo />
  </a>
  
  <ul class="flex flex-wrap gap-x-6 gap-y-2 items-center">
    <!-- Home link -->
    <li>
      <a href="/" class="inline-block px-3 py-2 hover:text-blue-400 transition-colors">
        Home
      </a>
    </li>
    
    <!-- Podcast dropdown -->
    <li class="relative group">
      <button class="inline-block px-3 py-2 hover:text-blue-400 transition-colors flex items-center gap-2">
        I Podcast del Signore del Circo
        <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </button>
      
      <!-- Dropdown menu -->
      <ul class="absolute left-0 mt-0 w-56 bg-complementary border border-gray-700 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 py-2 z-50">
        <li>
          <a href="/opinione-non-richiesta" class="block px-4 py-2 hover:bg-gray-800 transition-colors">
            Opinione Non Richiesta
          </a>
        </li>
        <li>
          <a href="/a-normal" class="block px-4 py-2 hover:bg-gray-800 transition-colors">
            A-Normal Podcast
          </a>
        </li>
        <li>
          <a href="/chiacchiere" class="block px-4 py-2 hover:bg-gray-800 transition-colors">
            Chiacchiere
          </a>
        </li>
      </ul>
    </li>
    
    <!-- Chi Sono link -->
    <li>
      <a href="/chi-sono" class="inline-block px-3 py-2 hover:text-blue-400 transition-colors">
        Chi Sono
      </a>
    </li>
  </ul>
</nav>

<style>
  /* Hover effect for dropdown */
  li.group:hover > ul {
    opacity: 1;
    visibility: visible;
  }
</style>
